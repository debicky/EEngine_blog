<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
    <i class="far fa-edit"></i>
      Blog for EEngine
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if current_author %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-pen"></i>
              Post
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to posts_path, class: "dropdown-item" do %>
                Your posts
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to new_post_path, class: "dropdown-item" do %>
                Create new post
              <% end %>
            </div>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-user"></i>
            <%= author_signed_in? ? "#{current_author.email.split("@")[0]}" : "Guest" %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% if author_signed_in? %>
              <%= link_to "Edit profile", edit_author_registration_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Logout", destroy_author_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Sign up", new_author_registration_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Login", new_author_session_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>