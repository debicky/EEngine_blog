<% if current_author %>
  <div class="mt-3">
    <div class="d-flex justify-content-between py-3">
      <h3 class="ml-1">All posts</h3>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
    <%= render 'posts/post', post: @post %>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% else %>
  <div class="jumbotron mt-3">
    <h1 class="display-4">Hello, world!</h1>
    <p class="lead">I am simply blog created for recrutation process of EEngine Software House.</p>
    <hr class="my-4">
    <p>If you would like to created your own posts or comments, feel free to sign up!</p>
    <%= link_to new_author_registration_path, class: "btn btn-primary btn-lg" do %>
      Sign up
    <% end %>
  </div>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
    <%= render 'posts/post', post: @post %>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>


